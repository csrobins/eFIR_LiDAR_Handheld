<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eLiDAR.Views.CameraPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Take a Photo">
    <ContentPage.Content>
        <FlexLayout
            AlignContent="Center"
            AlignItems="Center"
            Direction="Column"
            JustifyContent="Center">
            <Label Text="CameraView Coming Soon!" />
            <Label
                x:Name="PayloadLabel"
                FontSize="34"
                Text="{Binding Payload, FallbackValue=Broken}"
                TextColor="Red" />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>