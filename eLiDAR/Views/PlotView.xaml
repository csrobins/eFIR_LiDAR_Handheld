                <Label Text="Plot Date" FontAttributes="None" HorizontalOptions="Start" />
                <DatePicker x:Name="txtDate" Date="{Binding PLOT_DATE, StringFormat='{0:MMMM dd, yyyy}'}" HorizontalOptions="FillAndExpand" MinimumDate="01-Jan-2020"/>
                <Label Text="Crew 1" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtCrew1"  Text="{Binding FIELD_CREW1}" HorizontalOptions="FillAndExpand"  Placeholder="Crew 1"/>
                <Label Text="Crew 2" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtCrew2"  Text="{Binding FIELD_CREW2}" HorizontalOptions="FillAndExpand"  Placeholder="Crew 2"/>
                </StackLayout>

            <StackLayout Grid.Column=" 1" Grid.Row="0">
                <Label Text="Location Fields" FontAttributes="Bold" HorizontalOptions="Start" />
                <Label Text="Declination" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtDeclination"  Text="{Binding DECLINATION}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Declination"/>
                <Label Text="UTM Zone" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtUTM"  Text="{Binding UTM_ZONE}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="UTM Zone"/>
                <Label Text="Easting (m)" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtEasting"  Text="{Binding UTM_EASTING}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Easting"/>
                <Label Text="Northing (m)" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtNorthing"  Text="{Binding UTM_NORTHING}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Northing"/>
                <Label Text="Datum" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtDatum"  Text="{Binding DATUM}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Datum"/>
            </StackLayout>

            <StackLayout Grid.Column="2"  Grid.Row="0">
                <Label Text="Calculated Fields" FontAttributes="Bold" HorizontalOptions="Start" />
                <Label Text="Leading Spp" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtLeadSpp"  Text="{Binding LEAD_SPP}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Lead Species"/>
                <Label Text="Origin" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtOrigin"  Text="{Binding ORIGIN}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Origin"/>
                <Label Text="Canopy Structure" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtCanopyStructure"  Text="{Binding CANOPY_STRUCTURE}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Canopy Structure"/>
                <Label Text="Maturity" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtMaturity"  Text="{Binding MATURITY}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Maturity"/>
                <Label Text="Crown Closure" FontAttributes="None" HorizontalOptions="Start" />
                <Entry x:Name="txtCrownClosure"  Text="{Binding CROWN_CLOSURE}" IsReadOnly="True"  HorizontalOptions="FillAndExpand"  Placeholder="Crown Closure"/>
            </StackLayout>
            <StackLayout Grid.Column="1" Grid.Row=" 1" Grid.ColumnSpan="2">
                <Label Text="Plot Notes" FontAttributes="None" HorizontalOptions="Start" />
                <Editor x:Name="txtNotes"  Text="{Binding NOTES}" HorizontalOptions="FillAndExpand"  Placeholder="Plot Notes"/>
            </StackLayout>
        </Grid>
       
    </ContentView.Content>
</ContentView>